<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingTop="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 제목과 업로드 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자산 관리 앱"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />
            
            <ImageButton
                android:id="@+id/btnUploadFile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_upload"
                android:background="@drawable/upload_button_background"
                android:contentDescription="파일 업로드"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 사용자 선택 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 사용자 선택"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/user_button_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnDowan"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="도완"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/dowan_selected"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnYounghee"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="영희"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/younghee_selected"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnJian"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="지안"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/jian_selected"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnJiwoo"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="지우"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/jiwoo_selected"
                android:textColor="@android:color/white"
                android:padding="8dp" />

        </LinearLayout>

        <!-- 기준 선택 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 기준 선택"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/criteria_button_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnAccount"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/account_selected"
                android:padding="8dp"
                android:text="계좌"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnProduct"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/product_selected"
                android:padding="8dp"
                android:text="상품"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSector"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/sector_selected"
                android:padding="8dp"
                android:text="섹터"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 선택된 정보 표시 -->
        <TextView
            android:id="@+id/tvSelectedInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자와 기준을 선택해주세요"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

        <!-- 자산 분배 현황 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자산 분배 현황"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.example.myapplication.views.PieChartView
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white" />

        <!-- 자산 변동 그래프 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자산 변동 그래프"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.example.myapplication.views.LineChartView
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white" />

    </LinearLayout>

</ScrollView>
