<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/criteria_button_selected" />
            <corners android:radius="12dp" />
            <stroke android:width="3dp" android:color="@color/criteria_button_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/criteria_button_unselected" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/criteria_button_border" />
        </shape>
    </item>
</selector>
